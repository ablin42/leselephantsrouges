<%- include('partials/head'); -%>

<input type="file" id="file-input">
<p id="status">Please select a file</p>
<img id="preview" src="/img/default.jpg">

<form method="POST" id="s3form" action="/bide">
  <input type="hidden" id="avatar-url" name="avatar-url" value="/images/default.png">
  <input type="text" id="username" name="username" placeholder="Username"><br>
  <input type="text" id="full-name" name="full-name" placeholder="Full name"><br><br>
  <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf" />
  <input type="submit" value="Update profile">
</form>

<script src="/scripts/submitForm.js" defer></script>
<script src="/scripts/awsConfig.js"></script>

<%- include('partials/footer'); -%>
